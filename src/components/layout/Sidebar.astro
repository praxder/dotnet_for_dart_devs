---
import type { Lesson } from '../../lib/lessons';
import { MODULES } from '../../lib/curriculum';

interface Props {
  lessons: Lesson[];
  currentDay: number;
}

const { lessons, currentDay } = Astro.props;

// Group lessons by module
const byModule = MODULES.map(mod => ({
  module: mod,
  lessons: lessons.filter(l => l.data.day >= mod.days[0] && l.data.day <= mod.days[1]),
}));
---

<aside
  id="sidebar"
  class="fixed left-0 top-14 h-[calc(100vh-3.5rem)] w-72 border-r border-slate-800 bg-slate-900/50 overflow-y-auto z-40 transition-transform duration-300 -translate-x-full lg:translate-x-0"
>
  <div class="p-4 space-y-1">
    {byModule.map(({ module: mod, lessons: modLessons }) => (
      <details
        open={modLessons.some(l => l.data.day === currentDay)}
        class="group"
      >
        <summary class="flex items-center gap-2 px-3 py-2 rounded-lg cursor-pointer hover:bg-slate-800 text-slate-300 hover:text-white transition-colors list-none">
          <span class="text-base">{mod.icon}</span>
          <span class="flex-1 text-xs font-semibold truncate">{mod.shortName}</span>
          <span class="text-xs text-slate-600 tabular-nums">
            {mod.days[0]}–{mod.days[1]}
          </span>
          <svg
            class="w-3 h-3 text-slate-600 transition-transform group-open:rotate-90 shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 5l7 7-7 7" />
          </svg>
        </summary>
        <div class="mt-1 ml-4 space-y-0.5 border-l border-slate-800 pl-3">
          {modLessons.map(lesson => {
            const isActive = lesson.data.day === currentDay;
            const dayStr = String(lesson.data.day).padStart(3, '0');
            return (
              <a
                href={`${import.meta.env.BASE_URL}lessons/day-${dayStr}`}
                data-day={lesson.data.day}
                class={`sidebar-lesson flex items-start gap-2 px-2 py-1.5 rounded-md text-xs transition-colors group/lesson ${
                  isActive
                    ? 'bg-indigo-900/40 text-indigo-300 font-medium'
                    : 'text-slate-500 hover:text-slate-200 hover:bg-slate-800/50'
                } ${lesson.data.isProject ? 'italic' : ''}`}
              >
                <span class="lesson-check mt-0.5 shrink-0 w-3.5 h-3.5 rounded-full border border-slate-700 flex items-center justify-center text-[9px]" data-check={lesson.data.day}></span>
                <span class="leading-snug">
                  <span class="text-slate-600 tabular-nums mr-1">{lesson.data.day}.</span>
                  {lesson.data.title}
                </span>
              </a>
            );
          })}
        </div>
      </details>
    ))}
  </div>
</aside>

<!-- Mobile overlay -->
<div
  id="sidebar-overlay"
  class="fixed inset-0 bg-black/50 z-30 hidden lg:hidden"
  onclick="document.getElementById('sidebar')?.classList.toggle('-translate-x-full')"
></div>

<script>
  // Render completion checkmarks from localStorage
  function updateSidebarChecks() {
    try {
      const raw = localStorage.getItem('cs-learning-progress');
      const data = raw ? JSON.parse(raw) : { completedDays: [] };
      const completed: number[] = data.completedDays || [];

      document.querySelectorAll('[data-check]').forEach(el => {
        const day = parseInt((el as HTMLElement).dataset.check || '0');
        if (completed.includes(day)) {
          el.innerHTML = '✓';
          el.classList.add('bg-emerald-900/50', 'border-emerald-700', 'text-emerald-400');
          el.classList.remove('border-slate-700');
        }
      });
    } catch {}
  }

  updateSidebarChecks();
  window.addEventListener('progress-updated', updateSidebarChecks);
</script>
