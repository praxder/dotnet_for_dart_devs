---
import type { Lesson } from '../../lib/lessons';

interface Props {
  prev: Lesson | null;
  next: Lesson | null;
}

const { prev, next } = Astro.props;

function dayUrl(lesson: Lesson) {
  return `/lessons/day-${String(lesson.data.day).padStart(3, '0')}`;
}
---

<footer class="mt-12 pt-8 border-t border-slate-800">
  <div class="flex items-stretch gap-4">
    {prev ? (
      <a
        href={dayUrl(prev)}
        class="flex-1 flex flex-col gap-1 p-4 rounded-xl border border-slate-800 hover:border-slate-600 hover:bg-slate-800/50 transition-all group text-left"
      >
        <span class="text-xs text-slate-600 group-hover:text-slate-400 transition-colors">‚Üê Previous</span>
        <span class="text-xs text-slate-500">Day {prev.data.day}</span>
        <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors leading-snug">
          {prev.data.title}
        </span>
      </a>
    ) : (
      <div class="flex-1" />
    )}

    {next ? (
      <a
        href={dayUrl(next)}
        class="flex-1 flex flex-col gap-1 p-4 rounded-xl border border-slate-800 hover:border-indigo-600/50 hover:bg-indigo-900/20 transition-all group text-right"
      >
        <span class="text-xs text-slate-600 group-hover:text-indigo-400 transition-colors">Next ‚Üí</span>
        <span class="text-xs text-slate-500">Day {next.data.day}</span>
        <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors leading-snug">
          {next.data.title}
        </span>
      </a>
    ) : (
      <div class="flex-1 flex flex-col items-end justify-center p-4 rounded-xl border border-emerald-800/30 bg-emerald-900/10">
        <span class="text-emerald-400 font-semibold text-sm">üéâ Course Complete!</span>
        <span class="text-xs text-slate-500 mt-1">You've finished all 130 lessons</span>
      </div>
    )}
  </div>
</footer>
