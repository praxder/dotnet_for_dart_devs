---
interface Props {
  dartTitle?: string;
  csharpTitle?: string;
}

const { dartTitle = 'Dart', csharpTitle = 'C#' } = Astro.props;
---

<div class="my-6 rounded-xl overflow-hidden border border-slate-700 bg-slate-900">
  <!-- Labels -->
  <div class="flex border-b border-slate-700">
    <div class="flex-1 flex items-center gap-2 px-4 py-2.5 border-r border-slate-700 bg-slate-800/50">
      <img src="/dart-logo.svg" alt="" class="w-4 h-4 opacity-70" />
      <span class="text-xs font-semibold text-teal-400">{dartTitle}</span>
    </div>
    <div class="flex-1 flex items-center gap-2 px-4 py-2.5 bg-slate-800/30">
      <img src="/csharp-logo.svg" alt="" class="w-4 h-4 opacity-70" />
      <span class="text-xs font-semibold text-indigo-400">{csharpTitle}</span>
    </div>
  </div>

  <!-- Code panels -->
  <div class="flex flex-col md:flex-row">
    <div class="flex-1 border-r border-slate-700 overflow-x-auto [&_pre]:!rounded-none [&_pre]:!border-none [&_pre]:!m-0 [&_.expressive-code]:!rounded-none">
      <slot name="dart" />
    </div>
    <div class="flex-1 overflow-x-auto [&_pre]:!rounded-none [&_pre]:!border-none [&_pre]:!m-0 [&_.expressive-code]:!rounded-none">
      <slot name="csharp" />
    </div>
  </div>
</div>
